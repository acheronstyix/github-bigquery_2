<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <title>Angular 2 QuickStart</title>
    <link href="<%= base %>node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <style type="text/css">

        .navbar-diy {
            background-color: #f8f8f8;
            border-color: #e7e7e7;
        }

        .navbar-diy .navbar-nav > li > .router-link-active {
            color: #fff;
            background-color: #2aabd2;
        }

        /*.navbar-diy .navbar-nav > li.current{*/
            /*border-bottom: 3px solid #000000;*/
        /*}*/

        .input-group {
            margin-bottom: 20px;;
        }

        .ng-invalid {
            border: 1px solid #ff0000;
            box-shadow: inset 0 1px 1px rgba(255, 0, 0, 0.075);
        }

        .ng-pristine.ng-invalid {
            border: 1px solid #ccc;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
        }
        .slide{
            transition: all 200ms linear;
        }

        .left-to-right{
            opacity: 0;
            transform: translate(100px,0);
        }

        .left-to-right.in{
            opacity: 1;
            transform: translate(0,0);
        }


    </style>

    <script src="<%= base %>lib/localstorageDB.js"></script>
    <script src="<%= base %>node_modules/moment/moment.js"></script>
    <!-- 1. Load libraries -->
    <!-- IE required polyfills, in this exact order -->
    <script src="<%= base %>node_modules/es6-shim/es6-shim.min.js"></script>
    <script src="<%= base %>node_modules/systemjs/dist/system-polyfills.js"></script>

    <script src="<%= base %>node_modules/angular2/bundles/angular2-polyfills.js"></script>
    <script src="<%= base %>node_modules/systemjs/dist/system.src.js"></script>
    <script src="<%= base %>node_modules/rxjs/bundles/Rx.js"></script>
    <script src="<%= base %>node_modules/angular2/bundles/angular2.dev.js"></script>
    <script src="<%= base %>node_modules/angular2/bundles/router.dev.js"></script>
    <script src="<%= base %>node_modules/angular2/bundles/http.dev.js"></script>
    <script src="<%= base %>node_modules/angular2/bundles/http.dev.js"></script>


    <base href="/">
    <!-- 2. Configure SystemJS -->

    <script>
        System.config({
            packages: {
                '<%= base %>app': {
                    format: 'register',
                    defaultExtension: 'js',
                    main:'boot.js'
                }
            }
        });
        System.import('<%= base %>app/boot')
                .then(null, console.error.bind(console));
    </script>

</head>

<!-- 3. Display the application -->
<body style="overflow-x: hidden;">

<angular2-demo>
    <h1 class="text-center" style="margin-top:10%;">Loading...</h1>
    <footer></footer>
</angular2-demo>
</body>

</html>